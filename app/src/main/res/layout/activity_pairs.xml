<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/blue_sky"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="64dp"
        android:textStyle="bold"
        android:text="@string/pairs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pair_0_0"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/apple" />

                <ImageView
                    android:id="@+id/pair_0_1"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/apple" />

                <ImageView
                    android:id="@+id/pair_0_2"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/apple" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pair_1_0"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/apple" />

                <ImageView
                    android:id="@+id/pair_1_1"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/apple" />

                <ImageView
                    android:id="@+id/pair_1_2"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/apple" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pair_2_0"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/apple" />

                <ImageView
                    android:id="@+id/pair_2_1"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/apple" />

                <ImageView
                    android:id="@+id/pair_2_2"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/apple" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pair_3_0"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/apple" />

                <ImageView
                    android:id="@+id/pair_3_1"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/apple" />

                <ImageView
                    android:id="@+id/pair_3_2"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:src="@drawable/apple" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/flips_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/flipps"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/pairsFlips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintStart_toEndOf="@id/flips_string"
        android:textSize="32sp"
        android:text="0"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPairsNewGame"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>